<main class="container-md p-md-5 d-flex flex-column">
  <!-- Button trigger modal -->
  <button
    type="button"
    class="btn btn-primary show-add-habit-form-btn"
    id="showAddHabitFormBtn"
    data-bs-toggle="modal"
    data-bs-target="#addHabitModal"
  >
    Add Habit
  </button>

  <!-- Modal -->
  <div
    class="modal fade"
    id="addHabitModal"
    tabindex="-1"
    aria-labelledby="addHabitModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="addHabitModalLabel">Add Habit</h1>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
            id="habitModalCloseBtn"
          ></button>
        </div>
        <div class="modal-body">
          <ul
            class="d-none alert alert-danger px-4 overflow-hidden"
            role="alert"
            id="habitErrors"
          ></ul>
          <form class="add-habit-form" id="addHabitForm">
            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control"
                id="habitNameInput"
                placeholder="habit name"
              />
              <label for="habitNameInput">Habit Name</label>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="addHabitBtn" onclick="addHabit()">
            Add
          </button>
        </div>
      </div>
    </div>
  </div>

  <ul class="habit-list" id="habitList"></ul>
</main>
